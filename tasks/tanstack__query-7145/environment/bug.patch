+    <div v-else-if="isError">An error has occurred: {{ error }}</div>
+    <div v-else-if="data">
+      <ul>
+        <li v-for="item in data" :key="item.id">
+          <a
+            @click="$emit('setPostId', item.id)"
+            href="#"
+            :class="{ visited: isVisited(item.id) }"
+            >{{ item.title }}</a
+          >
+        </li>
+      </ul>
