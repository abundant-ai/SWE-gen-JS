+          context.report({
+            node: node,
+            messageId: 'missingDeps',
+            data: {
+              deps: uniqueMissingRefs.map((ref) => ref.text).join(', '),
+            },
+            suggest: suggestions,
+          })
+        }
+      },
+    }
+  }),
+})
