+        const uniqueMissingRefs = uniqueBy(missingRefs, (x) => x.text)
+
+        if (uniqueMissingRefs.length > 0) {
+          const missingAsText = uniqueMissingRefs
+            .map((ref) => ASTUtils.mapKeyNodeToText(ref.identifier, sourceCode))
